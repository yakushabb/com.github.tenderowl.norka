{
    "app-id": "com.github.tenderowl.norka",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.tenderowl.norka",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home",
        "--env=LD_LIBRARY_PATH=/app/lib"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "granite",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/elementary/granite.git",
                    "tag": "6.2.0"
                }
            ]
        },
        {
            "name": "libhandy",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libhandy.git"
                }
            ]
        },
        {
            "name" : "gtksourceview",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtksourceview.git",
                    "tag" : "4.8.2"
                }
            ]
        },
        {
            "name" : "gspell",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/GNOME/gspell/-/archive/1.9.1/gspell-1.9.1.tar.gz",
                    "sha256" : "231511e8ff832f2b539f25eada592cbc40b557863cf98c1384d71a184975c76e"
                }
            ]
        },
        "python3-markdown2.json",
        "python3-requests.json",
        "python3-htmldocx.json",
        "elementary-stylesheet.json",
        "elementary-icons.json",
        {
            "name": "norka",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/TenderOwl/Norka.git",
                    "tag": "0.1.0",
                    "commit": "aff36414b192046db860759a0d46aa8fae01b940"
                }
            ]
        }
    ]
}
